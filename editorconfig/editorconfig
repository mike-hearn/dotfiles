# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true

# Files with two-space indents
[*.{js,jsx,css,scss,hbs,html,yml,yaml}]
